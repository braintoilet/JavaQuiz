                            android:textAppearance="@android:style/TextAppearance.Medium"
                            android:textColor="@android:color/white" />

                    </RadioGroup>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/question"
