<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.javaquiz.MainActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/java2"
                android:scaleType="fitCenter"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#212121"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/headerLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="8dp"
                        android:text="Java Quiz"
                        android:textAppearance="@android:style/TextAppearance.Large"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="8dp"
                        android:text="@string/question_label1"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/question"
                        android:fontFamily="sans-serif-medium"
                        android:padding="8dp"
                        android:text="@string/question1"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@android:color/white" />

                    <RadioGroup
                        android:id="@+id/answers_group1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/question">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@android:color/white"
                            android:fontFamily="sans-serif-medium"
                            android:paddingLeft="8dp"
                            android:text="@string/question1_answer1"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            android:textColor="@android:color/white" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@android:color/white"
                            android:fontFamily="sans-serif-medium"
                            android:paddingLeft="8dp"
                            android:text="@string/question1_answer2"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            android:textColor="@android:color/white" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@android:color/white"
                            android:fontFamily="sans-serif-medium"
                            android:paddingLeft="8dp"
                            android:text="@string/question1_answer3"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            android:textColor="@android:color/white" />

                    </RadioGroup>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="8dp"
                        android:text="@string/question_label2"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/question"
                        android:fontFamily="sans-serif-medium"
                        android:padding="8dp"
                        android:text="@string/question2"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@android:color/white" />

                    <RadioGroup
                        android:id="@+id/answers_group2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/question">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@android:color/white"
                            android:fontFamily="sans-serif-medium"
                            android:paddingLeft="8dp"
                            android:text="@string/question2_answer1"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            android:textColor="@android:color/white" />

                        <RadioButton
                            android:layout_width="wrap_content"
